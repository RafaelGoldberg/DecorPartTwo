@model IEnumerable<Tzedakah_Models.ApplicationType>


@{ 
    ViewData["Title"] = "ApplicationType";
}

<div class="container p-3  bg-white">
    <div class="row pt-3">
       
            <div class="col-6">
                <h2 class="text-primary">Application Type List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary ">  <i class="fas fa-plus"></i> Create New Application Type</a>
            </div>
                     
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>Application Type Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td class="w-50">@obj.Name</td>
                        <td class="w-50">
                            <a asp-controller="ApplicationType" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary "><i class="fas fa-edit"></i> Edit</a>
                            <a asp-controller="ApplicationType" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger "><i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Application Type Exists.</p>
    }

</div>
