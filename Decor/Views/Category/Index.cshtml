@model IEnumerable<Tzedakah_Models.Category>


@{ 
    ViewData["Title"] = "Category";
}

<div class="container p-3 bg-white">
    <div class="row pt-3">
       
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary ">
                    <i class="fas fa-plus"></i>
                Create Category</a>
            </div>
                     
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td class="w-50">@obj.Name</td>
                        <td class="w-25">@obj.DisplayOrder</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary "><i class="fas fa-edit"></i> Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger "><i class="fas fa-trash-alt"></i> Delete</a>
                            </div>
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Category Exists.</p>
    }

</div>
